<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mbq.menudrawer.mbqscpuguide"
    android:versionCode="3"
    android:versionName="2.0.1">

    <uses-sdk android:minSdkVersion="17" android:targetSdkVersion="17" />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:theme="@style/SampleTheme">

        <activity
            android:name="SamplesActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mbq.menudrawer.mbqscpuguide.WindowSample" />
        <activity android:name="com.mbq.menudrawer.mbqscpuguide.ContentSample" />
        <activity android:name="com.mbq.menudrawer.mbqscpuguide.ListActivitySample" />
        <activity android:name="com.mbq.menudrawer.mbqscpuguide.ActionBarOverlaySample" />
        <activity android:name="com.mbq.menudrawer.mbqscpuguide.ViewPagerSample" />
        <activity
            android:name="com.mbq.menudrawer.mbqscpuguide.RightMenuSample"
            android:theme="@style/SampleTheme.RightDrawer" />
        <activity
            android:name="com.mbq.menudrawer.mbqscpuguide.TopMenuSample"
            android:theme="@style/SampleTheme.TopDrawer">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mbq.menudrawer.mbqscpuguide.SamplesActivity" />
        </activity>
        <activity
            android:name="com.mbq.menudrawer.mbqscpuguide.BottomMenuSample"
            android:theme="@style/SampleTheme.BottomDrawer" />
        <activity
            android:name="com.mbq.menudrawer.mbqscpuguide.LayoutSample"
            android:theme="@style/SampleTheme.TopDrawer" />
        <activity android:name="com.mbq.menudrawer.mbqscpuguide.StaticDrawerSample" />
    </application>

</manifest>
